{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "${file}",
                "-o",
                "${fileBasenameNoExtension}.exe"
            ],
            "group": "build"
        },
        {
            "label": "compile and run",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "g++ -std=c++17 ${file} -o ${fileBasenameNoExtension}.exe && ${fileBasenameNoExtension}.exe < input.txt > output.txt"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
